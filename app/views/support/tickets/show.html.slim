h1 Support Ticket Status
hr
.row
  .col-md-8
    .panel.panel-primary
      .panel-heading Ticket Detail
      .panel-body
        .text-center
          strong Ticket Number: 
          code #{@ticket.ticket_number}
      table.table.table-sm.table-bordered
        tr
          th Status
          td 
            span.label.label-default = @ticket.status
        tr
          th Summary
          td = @ticket.subject
        tr
          th Issue Detail
          td = @ticket.body
        tr
          th Urgency
          td 
            span.label.label-default = @ticket.urgency
  .col-md-4
    .panel.panel-info
      .panel-heading Actions
      ul.list-group
        = link_to 'Cancel Request', cancel_support_ticket_path(@ticket), method: :patch, class: 'list-group-item'